{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiquidLearn",
  "version": "1.0.0",
  "identifier": "com.liquidlearn.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "LiquidLearn - Intelligent Spaced Repetition Learning System",
    "shortDescription": "Spaced Repetition Learning",
    "category": "Education",
    "copyright": "Copyright Â© 2025"
  },
  "app": {
    "windows": [
      {
        "title": "LiquidLearn",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}